<?xml version="1.0"?>
<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find puzzle_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)" />
  <env name="GAZEBO_PLUGIN_PATH" value="$(find puzzle_gazebo)/plugins/build:$(optenv GAZEBO_PLUGIN_PATH)" />

  <remap from="/iris_puzzle0/camera/depth/image_raw" to="/camera/aligned_depth_to_color/image_raw"/>
  <remap from="/iris_puzzle0/camera/rgb/image_raw" to="/camera/color/image_raw"/>
  <remap from="/iris_puzzle0/camera/rgb/camera_info" to="/camera/color/camera_info"/>
  
  <arg name="world_name" default="$(find puzzle_gazebo)/worlds/puzzle.world"/>
  <arg name="verbose" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="model" default="iris_puzzle"/>
  
  <!-- gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="verbose" value="$(arg verbose)"/>
    <arg name="gui" default="$(arg gui)"/>
  </include>

  <!-- mavros -->
  <!-- start id must be equivals 0 -->
  <arg name="ID" value="0"/>
  <group ns="$(arg model)$(arg ID)">
    
    <!-- iris -->
    <include file="$(find puzzle_gazebo)/launch/single_uav_spawn.launch">
      <arg name="model" value="$(arg model)"/>
      <arg name="ID" value="$(arg ID)"/>
      <arg name="x" value="5"/>
      <arg name="y" value="0"/>
      <arg name="z" value=".2"/>
      <arg name="Y" value="3.14"/>
    </include>

    <arg name="fcu_url" default="udp://:14540@localhost:14580"/>
    <include file="$(find mavros)/launch/px4.launch">
        <arg name="fcu_url" value="$(arg fcu_url)"/>
        <arg name="gcs_url" value=""/>
        <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
        <arg name="tgt_component" value="1"/>
    </include>
  </group>

  <node pkg="tf" type="static_transform_publisher" name="tf_depth_camera" args="0 0 0 -1.57 0 -1.57 base_link camera_link 10"/>
</launch>